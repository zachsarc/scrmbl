<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.scrmbl.Controller"
            prefWidth="900.0" prefHeight="600.0"
            stylesheets="@styles.css">

    <!-- CENTER: everything lives here and is centered -->
    <center>
        <HBox alignment="CENTER" spacing="80.0" BorderPane.alignment="CENTER">

            <!-- LEFT COLUMN: egg + mode + algorithm choice + SCRMBL button -->
            <children>
                <VBox alignment="CENTER" spacing="12.0">

                    <!-- Egg image -->
                    <ImageView fitHeight="150.0" fitWidth="200.0"
                               pickOnBounds="true" preserveRatio="true">
                        <image>
                            <Image url="@../../../images/SCRMBL_GIF.gif" />
                        </image>
                    </ImageView>

                    <!-- Status light -->
                    <Circle fx:id="statusLight"
                            radius="6.0"
                            fill="#888888"
                            stroke="BLACK"
                            strokeType="INSIDE" />

                    <!-- Mode label + toggle -->
                    <VBox alignment="CENTER" spacing="4.0">
                        <Label fx:id="modeLabel"
                               alignment="CENTER"
                               text="Mode: Encrypt">
                            <font>
                                <Font size="12.0" />
                            </font>
                        </Label>
                        <ToggleButton fx:id="modeToggle"
                                      mnemonicParsing="false"
                                      text="Switch To Decrypt"
                                      prefWidth="150.0" />
                    </VBox>

                    <!-- "How cooked" label -->
                    <Label fx:id="cookedLabel"
                           text="How would you like your word cooked?">
                        <font>
                            <Font size="12.0" />
                        </font>
                    </Label>

                    <!-- Radio buttons -->
                    <VBox alignment="CENTER_LEFT" spacing="4.0">
                        <RadioButton fx:id="scrambledRadio"
                                     text="Scrambled (Graph)"
                                     mnemonicParsing="false" />
                        <RadioButton fx:id="overeasyRadio"
                                     text="Over-Easy (Tree)"
                                     mnemonicParsing="false" />
                        <RadioButton fx:id="hardboiledRadio"
                                     text="Hard-Boiled (HashMap)"
                                     mnemonicParsing="false" />
                    </VBox>

                    <!-- SCRMBL button -->
                    <Button fx:id="runButton"
                            text="SCRMBL"
                            mnemonicParsing="false"
                            prefWidth="80.0" />

                </VBox>

                <!-- RIGHT COLUMN: input, output, retrieve key -->
                <VBox alignment="CENTER" spacing="10.0">

                    <TextArea fx:id="inputText"
                              prefWidth="380.0" prefHeight="110.0"
                              promptText="Enter text here..." />

                    <TextArea fx:id="outputText"
                              prefWidth="380.0" prefHeight="140.0"
                              editable="false"
                              promptText="Output shown here" />

                    <Button fx:id="retrieveKeyButton"
                            text="RETRIEVE KEY"
                            mnemonicParsing="false"
                            prefWidth="120.0" />

                </VBox>
            </children>

        </HBox>
    </center>

</BorderPane>
